package p2023_07_14;

public class If01 {
	public static void main(String[] args) {
//		if (조건식)
//			조건식이 참인 경우 실행될 문장
//		if 10 > 5 // 조건식을 만들 때 괄호가 있어야 한다.(오류 발생)
		if (10 > 5) {
			System.out.println("실행 1");
		}
		// 실행되는 문장이 1줄인 경우에는 중괄호를 생략할 수 있다.
		if (10 > 5)	System.out.println("실행 1");
		
		if (true) {
			System.out.println("무조건 실행");
		}
		if (false) {
			System.out.println("무조건 실행");
		}
	}
}
